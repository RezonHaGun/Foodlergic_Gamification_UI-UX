<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/view_page_bg_achievement"
    android:padding="8dp">

    <TextView
        android:id="@+id/nameFriendRequest"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Name"
        android:textColor="@color/white"
        android:padding="8dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="parent"/>

    <TextView
        android:id="@+id/idFriendRequest"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text=" Id :123456"
        android:textColor="@color/white"
        android:padding="8dp"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameFriendRequest"/>
    <Button
        android:id="@+id/buttonAccept"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:drawableEnd="@drawable/ic_checked"
        android:background="@color/transparent"
        android:padding="1dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="@id/buttonDecline"
        app:layout_constraintEnd_toStartOf="@id/buttonDecline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/buttonDecline"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:drawableEnd="@drawable/ic_cross"
        android:padding="1dp"
        android:background="@color/transparent"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>