<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_primary"
    tools:context=".presentation.reward.RewardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/textTitleBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/view_page_rectanggel"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:text="Special Book"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:textAllCaps="true" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:overScrollMode="never" />

        <LinearLayout
            android:id="@+id/textTitlePremiumBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/view_page_rectanggel"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/titleBookPremium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:text="Premium Book"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:textAllCaps="true" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewPremiumBook"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:overScrollMode="never" />

        <LinearLayout
            android:id="@+id/textTitleExclusiveBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/view_page_rectanggel"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/titleBookExclusive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:text="Exclusive Book"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:textAllCaps="true" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewEksklusifBook"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="20dp"
            android:overScrollMode="never" />

    </LinearLayout>
</ScrollView>
